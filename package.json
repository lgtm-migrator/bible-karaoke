{
  "name": "bible-karaoke",
  "description": "Create 'karaoke-style' videos of Bible passages to help users become comfortable at reading the Bible in another language.",
  "repository": {
    "type": "git",
    "url": "https://github.com/mseag/bible-karaoke.git"
  },
  "author": {
    "name": "DigiServe",
    "email": "info@digiserve.org",
    "url": "https://digiserve.org"
  },
  "version": "1.0.0",
  "private": true,
  "main": "dist/main/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "copy-files": "copyfiles \"src/main/rendering/render.html\" build",
    "ff": "ffbinaries ffmpeg ffprobe -o=binaries",
    "build": "npm run snowpack-build",
    "dev": "cross-env ELECTRON_ENV=development electron-snowpack dev",
    "electron-dev": "concurrently \"npm run snowpack-dev\" \"npm run electron-start\"",
    "electron-start": "cross-env ELECTRON_ENV=development electron  . --inspect 9229",
    "presnowpack-build": "npm run ff && npm run copy-files",
    "snowpack-dev": "snowpack dev --reload",
    "snowpack-build": "electron-snowpack build",
    "pretest": "tsc --project tsconfig.spec.json",
    "test": "ava **/*.spec.js",
    "preintegration": "tsc --project tsconfig.spec.json && npm run ff",
    "integration": "ava **/*.integration.js",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack-mac": "npm run build",
    "preelectron-pack-win": "npm run build",
    "preelectron-pack-linux": "npm run build",
    "lint": "eslint --ext ts,tsx --cache src public",
    "prettier": "prettier --write \"**/*.{ts,js,json,css,scss,less,html,md,yml}\"",
    "prettier:test": "prettier --list-different \"**/*.{ts,js,json,css,scss,less,html,md,yml}\"",
    "electron-pack-mac": "electron-builder -m",
    "electron-pack-win": "electron-builder -w",
    "electron-pack-linux": "electron-builder -l",
    "prepare": "husky install"
  },
  "dependencies": {
    "@blueprintjs/core": "^3.45.0",
    "@blueprintjs/select": "^3.16.4",
    "chromium": "^2.1.2",
    "classnames": "^2.3.1",
    "datauri": "^2.0.0",
    "date-fns": "^2.22.1",
    "electron-ga-uuid": "^1.0.2",
    "ffbinaries": "^1.1.4",
    "font-list": "^1.3.1",
    "lodash": "^4.17.21",
    "mobx": "^5.15.7",
    "mobx-persist": "^0.4.1",
    "mobx-react": "^6.3.1",
    "puppeteer-core": "^3.0.0",
    "react": "^16.14.0",
    "react-color": "^2.19.3",
    "react-dom": "^16.14.0",
    "readdir-sorted": "^3.0.0",
    "reflexbox": "^4.0.6",
    "styled-components": "^5.3.0",
    "styled-system": "^5.1.5",
    "tmp-promise": "^3.0.2",
    "winston": "^3.3.3",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@snowpack/app-scripts-react": "^2.0.1",
    "@snowpack/plugin-dotenv": "^2.2.0",
    "@snowpack/plugin-react-refresh": "^2.5.0",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@snowpack/plugin-webpack": "^2.3.1",
    "@tsconfig/node16": "^1.0.1",
    "@types/lodash": "^4.14.170",
    "@types/node": "^12.20.27",
    "@types/puppeteer-core": "^5.4.0",
    "@types/react": "^17.0.11",
    "@types/react-color": "^3.0.4",
    "@types/react-dom": "^17.0.8",
    "@types/reflexbox": "^4.0.2",
    "@types/snowpack-env": "^2.3.4",
    "@types/styled-components": "^5.1.10",
    "@types/tmp": "^0.2.1",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "ava": "^3.15.0",
    "concurrently": "^6.2.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "electron": "^9.4.4",
    "electron-builder": "^22.11.7",
    "electron-snowpack": "^0.12.0",
    "eslint-plugin-ava": "^10.5.0",
    "eslint-plugin-react": "^7.20.6",
    "ffbinaries": "^1.1.4",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "sass": "^1.35.1",
    "snowpack": "^3.8.8",
    "typescript": "^3.9.7"
  },
  "bin": {
    "bbk": "./public/cli/index.js"
  },
  "homepage": "./",
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --cache --fix",
    "*.{ts,js,json,css,scss,less,html,md,yml}": "prettier --write"
  },
  "ava": {
    "nonSemVerExperiments": {
      "reverseTeardowns": true
    },
    "verbose": true,
    "extensions": [
      "cjs",
      "mjs",
      "js",
      "ts"
    ],
    "files": [
      "public/**/*.{spec,integration}.js"
    ]
  },
  "build": {
    "extends": "electron-snowpack/config/electron-builder.js",
    "appId": "org.digiserve.bible-karaoke",
    "productName": "Bible Karaoke",
    "copyright": "Copyright Â© 2021 ${author}",
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "files": [
      "binaries/*",
      "build/**/*",
      "node_modules/**/*"
    ],
    "extraFiles": [
      "./binaries"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
